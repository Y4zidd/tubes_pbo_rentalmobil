<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import atlantafx.base.controls.Tile?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.carrentalfx.DashboardController"
            prefWidth="1024.0" prefHeight="640.0">

    <top>
        <HBox spacing="16.0" styleClass="header-bar">
            <children>
                <Label text="CarRentalFX"
                       styleClass="title-2"/>
                <Label fx:id="titleLabel"
                       text="Dashboard"
                       styleClass="title-4"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="userLabel"
                       text="Guest"
                       styleClass="label-strong"/>
                <Button fx:id="profileButton" text="Profil"/>
                <Button fx:id="logoutButton" text="Logout"/>
            </children>
            <padding>
                <Insets top="12.0" right="16.0" bottom="12.0" left="16.0"/>
            </padding>
        </HBox>
    </top>

    <left>
        <VBox spacing="8.0" BorderPane.alignment="CENTER_LEFT"
              style="-fx-padding: 16; -fx-background-color: -color-bg-subtle;">
            <children>
                <Label text="Menu"
                       styleClass="title-4"/>
                <Button fx:id="dashboardButton" text="Dashboard" maxWidth="Infinity"/>
                <Button fx:id="mobilButton" text="Data Mobil" maxWidth="Infinity"/>
                <Button fx:id="petugasButton" text="Data Petugas" maxWidth="Infinity"/>
                <Button fx:id="konsumenButton" text="Konsumen" maxWidth="Infinity"/>
                <Button fx:id="transaksiButton" text="Transaksi" maxWidth="Infinity"/>
                <Button fx:id="laporanButton" text="Laporan" maxWidth="Infinity"/>
            </children>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane">
            <VBox fx:id="homePane" spacing="16.0" style="-fx-padding: 24;">
                <children>
                    <Label text="Ringkasan"
                           styleClass="title-3"/>

                    <HBox spacing="16.0">
                        <children>
                            <Tile fx:id="mobilTile"
                                  title="Mobil"
                                  description="0 mobil terdaftar"
                                  prefWidth="220.0"/>
                            <Tile fx:id="konsumenTile"
                                  title="Konsumen"
                                  description="0 konsumen terdaftar"
                                  prefWidth="220.0"/>
                            <Tile fx:id="transaksiTile"
                                  title="Transaksi"
                                  description="0 transaksi selesai"
                                  prefWidth="220.0"/>
                            <Tile fx:id="pemasukanTile"
                                  title="Pemasukan"
                                  description="Rp 0"
                                  prefWidth="220.0"/>
                        </children>
                    </HBox>

                    <Label text="Aktivitas"
                           styleClass="title-3"/>

                    <Label text="Pilih menu di sebelah kiri untuk mulai mengelola data."
                           wrapText="true"/>
                </children>
            </VBox>
        </StackPane>
    </center>

</BorderPane>
