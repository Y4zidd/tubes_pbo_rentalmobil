<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.carrentalfx.LaporanViewController"
            prefWidth="800.0" prefHeight="600.0">

    <top>
        <VBox spacing="8.0" style="-fx-padding: 16;">
            <children>
                <Label text="Laporan Pendapatan" styleClass="title-3"/>
            </children>
        </VBox>
    </top>

    <center>
        <VBox spacing="8.0" style="-fx-padding: 0 16 8 16;">
            <children>
                <TableView fx:id="table" prefHeight="220.0">
                    <columns>
                        <TableColumn fx:id="colNo" text="No" prefWidth="60.0"/>
                        <TableColumn fx:id="colPeriode" text="Periode" prefWidth="140.0"/>
                        <TableColumn fx:id="colTotal" text="Total Pemasukan" prefWidth="220.0"/>
                    </columns>
                </TableView>

                <Label text="Detail transaksi bulan terpilih" styleClass="title-4"/>
                <TableView fx:id="detailTable" prefHeight="220.0">
                    <columns>
                        <TableColumn fx:id="detailColNo" text="No" prefWidth="40.0"/>
                        <TableColumn fx:id="detailColMobil" text="Mobil" prefWidth="180.0"/>
                        <TableColumn fx:id="detailColPlat" text="Plat" prefWidth="100.0"/>
                        <TableColumn fx:id="detailColNoKtp" text="No KTP" prefWidth="120.0"/>
                        <TableColumn fx:id="detailColTglSewa" text="Tgl Sewa" prefWidth="100.0"/>
                        <TableColumn fx:id="detailColTglKembali" text="Tgl Kembali" prefWidth="100.0"/>
                        <TableColumn fx:id="detailColStatus" text="Status" prefWidth="80.0"/>
                        <TableColumn fx:id="detailColTotal" text="Total" prefWidth="120.0"/>
                    </columns>
                </TableView>
            </children>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="16.0" alignment="CENTER_RIGHT" style="-fx-padding: 16;">
            <children>
                <Label fx:id="totalIncomeLabel" text="Total pemasukan selesai: Rp 0"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="refreshButton" text="Refresh"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>
