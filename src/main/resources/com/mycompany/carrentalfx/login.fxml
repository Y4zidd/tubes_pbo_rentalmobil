<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.carrentalfx.LoginController"
      spacing="16.0"
      alignment="CENTER"
      style="-fx-padding: 32;">

    <children>
        <Label text="CarRentalFX" styleClass="title-2"/>
        <Label text="Login" styleClass="title-3"/>

        <VBox spacing="8.0" maxWidth="320.0">
            <children>
                <Label text="Username"/>
                <TextField fx:id="usernameField" promptText="Masukkan username"/>

                <Label text="Password"/>
                <PasswordField fx:id="passwordField" promptText="Masukkan password"/>

                <Label fx:id="errorLabel" textFill="red" wrapText="true"/>
            </children>
        </VBox>

        <HBox spacing="8.0" alignment="CENTER" maxWidth="320.0">
            <children>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="loginButton" text="Login" defaultButton="true" minWidth="80.0"/>
            </children>
        </HBox>
    </children>

    <padding>
        <Insets top="40.0" right="40.0" bottom="40.0" left="40.0"/>
    </padding>
</VBox>

